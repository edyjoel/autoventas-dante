---
const currentYear = new Date().getFullYear();
---

<footer id="contacto">
  <div class="container">
    <div class="footer-content">
      <div class="footer-section">
        <h3>
          <a href="/" class="footer-logo">Autoventas Dante</a>
        </h3>
        <p>Tu mejor opción en vehículos de calidad</p>
      </div>
      <div class="footer-section">
        <h4>Contacto</h4>
        <address class="footer-address">
          <p>
            <span class="footer-contact-label">Email:</span>
            <a
              class="footer-contact-link"
              href="mailto:info@autoventasdante.com">info@autoventasdante.com</a
            >
          </p>
          <p>
            <span class="footer-contact-label">Teléfono:</span>
            <a class="footer-contact-link" href="tel:+1234567890"
              >+1 234 567 890</a
            >
          </p>
        </address>
      </div>
      <div class="footer-section">
        <h4>Síguenos</h4>
        <div class="social-links">
          <a
            href="https://www.tiktok.com/@autoventasdante"
            aria-label="TikTok"
            target="_blank"
            rel="noopener noreferrer"
          >
            <img
              src="/icons/tiktok.svg"
              alt=""
              width="28"
              height="28"
              loading="lazy"
              decoding="async"
            />
          </a>
        </div>
      </div>
    </div>
    <div class="footer-bottom">
      <p>
        &copy; {currentYear} Autoventas Dante. Todos los derechos reservados.
      </p>
    </div>
  </div>
</footer>

<style>
  .footer-address {
    font-style: normal;
  }

  .footer-contact-label {
    font-weight: 600;
  }

  .footer-contact-link {
    color: inherit;
    text-decoration: none;
  }

  .footer-contact-link:focus-visible {
    outline: 2px solid var(--color-primary-light);
    outline-offset: 2px;
    border-radius: 2px;
  }

  .footer-content {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    margin-bottom: 2rem;
  }

  .footer-section h3,
  .footer-section h4 {
    margin-top: 0;
    margin-bottom: 1rem;
  }

  .footer-section h3 {
    font-size: 1.2rem;
    margin-bottom: 0.75rem;
  }

  .footer-logo {
    font-weight: 700;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    color: var(--color-primary);
    font-family: var(--font-heading);
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    transition: color 0.3s ease;
  }

  .footer-logo:hover {
    color: var(--color-primary-light);
  }

  .footer-section p {
    margin: 0.5rem 0;
  }

  .social-links {
    display: flex;
    gap: 0.75rem;
    margin-top: 0.5rem;
  }

  .social-links a {
    text-decoration: none;
    color: inherit;
    width: 44px;
    height: 44px;
    border-radius: 50%;
    border: 1px solid rgba(34, 31, 34, 0.12);
    display: inline-flex;
    align-items: center;
    justify-content: center;
    transition: border-color 0.3s ease;
  }

  .social-links a:hover {
    border-color: var(--color-primary);
  }

  .social-links img {
    width: 26px;
    height: 26px;
    display: block;
  }

  .footer-bottom {
    padding-top: 1rem;
    text-align: center;
  }

  .footer-bottom p {
    margin: 0;
    font-size: 0.9rem;
  }

  @media (max-width: 768px) {
    .footer-content {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }
  }
</style>
