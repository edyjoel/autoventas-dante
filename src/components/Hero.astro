<section id="hero" class="hero" aria-labelledby="hero-title">
  <div class="hero-content">
    <div class="container">
      <div class="hero-info">
        <h1 id="hero-title" class="hero-title page-title">
          Encuentra tu Vehículo Ideal
        </h1>
        <p class="hero-description page-description">
          Descubre nuestra amplia selección de vehículos usados de calidad. Los
          mejores precios y financiamiento a tu medida.
        </p>
        <a href="/#modelos" class="hero-button page-button page-actions"
          >VER MODELOS</a
        >
      </div>
    </div>
  </div>
  <div class="hero-image">
    <img
      src="/images/hero/hero-car.png"
      alt="Vehículo destacado"
      width="1400"
      height="761"
      decoding="async"
      fetchpriority="high"
    />
  </div>
</section>

<style>
  .hero {
    position: relative;
    min-height: var(--hero-min-height);
    display: flex;
    align-items: center;
    overflow: hidden;
    scroll-margin-top: var(--header-height);
  }

  .hero-content {
    position: relative;
    z-index: 2;
    width: 100%;
    padding: var(--space-10) 0;
  }

  .hero-info {
    max-width: 37.5rem;
  }

  .hero-title {
    font-size: 3.5rem;
    color: var(--color-text-primary);
    margin-bottom: var(--space-7);
    line-height: 1.1;
    max-width: 25rem;
  }

  .hero-description {
    font-size: 1.125rem;
    color: var(--color-text-secondary);
    margin-bottom: var(--space-7);
    line-height: 1.6;
    max-width: 25rem;
    font-weight: 300;
  }

  .hero-button {
    /* Hereda estilos de .page-button en global.css */
  }

  .hero-image {
    position: absolute;
    right: 0;
    top: 50%;
    transform: translateY(-50%);
    z-index: 1;
    width: 60%;
    max-width: var(--hero-image-max);
    pointer-events: none;
  }

  .hero-image img {
    width: 100%;
    height: auto;
    display: block;
    object-fit: contain;
  }

  /* Responsive */
  @media (max-width: 1200px) {
    .hero-image {
      width: 55%;
      max-width: var(--hero-image-max-lg);
    }

    .hero-info {
      max-width: 31.25rem;
    }
  }

  @media (max-width: 968px) {
    .hero {
      min-height: var(--hero-min-height-md);
    }

    .hero-title {
      font-size: 2.5rem;
    }

    .hero-image {
      width: 50%;
      max-width: var(--hero-image-max-md);
    }
  }

  @media (max-width: 768px) {
    .hero {
      min-height: auto;
      flex-direction: column;
      padding: var(--space-9) 0 var(--space-7);
    }

    .hero-content {
      padding: 0;
      text-align: center;
      position: relative;
      z-index: 2;
    }

    .hero-info {
      max-width: 100%;
      background: linear-gradient(
        180deg,
        rgba(255, 255, 255, 0.95) 0%,
        rgba(255, 255, 255, 0.9) 100%
      );
      padding: var(--space-7) var(--space-6);
      border-radius: var(--radius-md);
    }

    .hero-title {
      max-width: 100%;
      color: var(--color-text-primary);
      margin-bottom: var(--space-6);
    }

    .hero-description {
      margin-bottom: var(--space-6);
      color: var(--color-text-primary);
      max-width: 100%;
      font-weight: 300;
    }

    .hero-button {
      padding: 0.875rem var(--space-7);
      font-size: 0.9375rem;
    }

    .hero-image {
      position: relative;
      width: 100%;
      max-width: var(--hero-image-max-md);
      margin: var(--space-7) auto 0;
      right: auto;
      top: auto;
      transform: none;
      opacity: 1;
      z-index: 1;
    }

    .hero-image img {
      filter: drop-shadow(0 10px 30px rgba(0, 0, 0, 0.15));
    }
  }

  @media (max-width: 480px) {
    .hero {
      padding: var(--space-7) 0 var(--space-6);
    }

    .hero-info {
      padding: var(--space-6) var(--space-4);
      border-radius: var(--radius-sm);
    }

    .hero-image {
      max-width: 25rem;
      margin-top: var(--space-6);
    }
  }
</style>
